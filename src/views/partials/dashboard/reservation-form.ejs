<!-- views/partials/dashboard/reservation-form.ejs -->
<div class="card">
        <div class="card-header">
            <h3>Gestion des Réservations</h3>
        </div>
        <div class="card-body">
            <form id="reservationForm" class="mb-4">
                <h4>Créer une Réservation</h4>
                <div class="mb-3">
                    <label class="form-label">Catway</label>
                    <select class="form-control" name="catwayNumber" required id="catwaySelect">
                        <!-- Rempli dynamiquement -->
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Nom du Client</label>
                    <input type="text" class="form-control" name="clientName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Nom du Bateau</label>
                    <input type="text" class="form-control" name="boatName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Date d'arrivée</label>
                    <input type="datetime-local" class="form-control" name="checkIn" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Date de départ</label>
                    <input type="datetime-local" class="form-control" name="checkOut" required>
                </div>
                <button type="submit" class="btn btn-primary">Réserver</button>
            </form>
        </div>
    </div>