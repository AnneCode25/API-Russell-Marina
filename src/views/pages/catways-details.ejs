<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Détails du Catway - Port Russell</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">Tableau de bord</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/catways">Catways</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/reservations">Réservations</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <button class="btn btn-light" onclick="logout()">Déconnexion</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <!-- Détails du Catway -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2>Détails du Catway <span id="catwayNumber"></span></h2>
                    </div>
                    <div class="card-body" id="catwayDetails">
                        <!-- Rempli dynamiquement -->
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" onclick="showEditForm()">Modifier</button>
                        <button class="btn btn-danger" onclick="deleteCatway()">Supprimer</button>
                    </div>
                </div>
            </div>

            <!-- Liste des réservations pour ce catway -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Réservations</h3>
                    </div>
                    <div class="card-body">
                        <div id="reservationsList">
                            <!-- Rempli dynamiquement -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Modification -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modifier le Catway</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editForm">
                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <select class="form-control" name="type" required>
                                <option value="long">Long</option>
                                <option value="short">Court</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">État</label>
                            <textarea class="form-control" name="catwayState" required></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" onclick="updateCatway()">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentCatway = null;

        function checkAuth() {
            const token = localStorage.getItem('token');
            if (!token) {
                window.location.href = '/';
            }
            return token;
        }

        function logout() {
            localStorage.removeItem('token');
            window.location.href = '/';
        }

        async function loadCatwayDetails() {
            const token = checkAuth();
            const catwayId = new URLSearchParams(window.location.search).get('id');
            
            if (!catwayId) {
                window.location.href = '/catways';
                return;
            }

            try {
                const response = await fetch(`/api/catways/${catwayId}`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });
                currentCatway = await response.json();
                
                document.getElementById('catwayNumber').textContent = `#${currentCatway.catwayNumber}`;
                document.getElementById('catwayDetails').innerHTML = `
                    <p><strong>Type:</strong> ${currentCatway.type}</p>
                    <p><strong>État:</strong> ${currentCatway.catwayState}</p>
                    <p><strong>Créé le:</strong> ${new Date(currentCatway.createdAt).toLocaleDateString()}</p>
                `;

                loadReservations(currentCatway.catwayNumber);
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors du chargement des détails du catway');
            }
        }

        async function loadReservations(catwayNumber) {
            const token = checkAuth();
            try {
                const response = await fetch(`/api/catways/${catwayNumber}/reservations`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });
                const reservations = await response.json();
                
                const container = document.getElementById('reservationsList');
                if (reservations.length === 0) {
                    container.innerHTML = '<p>Aucune réservation pour ce catway.</p>';
                    return;
                }

                container.innerHTML = reservations.map(reservation => `
                    <div class="card mb-2">
                        <div class="card-body">
                            <h5 class="card-title">${reservation.clientName}</h5>
                            <p class="card-text">
                                <strong>Bateau:</strong> ${reservation.boatName}<br>
                                <strong>Du:</strong> ${new Date(reservation.checkIn).toLocaleDateString()}<br>
                                <strong>Au:</strong> ${new Date(reservation.checkOut).toLocaleDateString()}
                            </p>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors du chargement des réservations');
            }
        }

        function showEditForm() {
            document.querySelector('#editForm select[name="type"]').value = currentCatway.type;
            document.querySelector('#editForm textarea[name="catwayState"]').value = currentCatway.catwayState;
            new bootstrap.Modal(document.getElementById('editModal')).show();
        }

        async function updateCatway() {
            const token = checkAuth();
            const formData = new FormData(document.getElementById('editForm'));
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch(`/api/catways/${currentCatway._id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    loadCatwayDetails();
                } else {
                    const error = await response.json();
                    alert(error.message || 'Erreur lors de la mise à jour');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors de la mise à jour');
            }
        }

        async function deleteCatway() {
            if (!confirm('Êtes-vous sûr de vouloir supprimer ce catway ?')) return;

            const token = checkAuth();
            try {
                const response = await fetch(`/api/catways/${currentCatway._id}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (response.ok) {
                    window.location.href = '/catways';
                } else {
                    const error = await response.json();
                    alert(error.message || 'Erreur lors de la suppression');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors de la suppression');
            }
        }

        // Au chargement de la page
        document.addEventListener('DOMContentLoaded', () => {
            loadCatwayDetails();
        });
    </script>
</body>
</html>